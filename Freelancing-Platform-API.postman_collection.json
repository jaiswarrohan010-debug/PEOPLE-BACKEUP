{
  "info": {
    "name": "Freelancing Platform API",
    "description": "Complete API collection for testing the freelancing platform backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "clientToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "freelancerToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "jobId",
      "value": "",
      "type": "string"
    },
    {
      "key": "offerId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP & Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"9876543210\",\n  \"otp\": \"123456\",\n  \"role\": \"client\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-otp"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('clientToken', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@freelancingplatform.com\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "admin", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('adminToken', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Client Endpoints",
      "item": [
        {
          "name": "Get Client Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{clientToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/client/profile",
              "host": ["{{baseUrl}}"],
              "path": ["client", "profile"]
            }
          }
        },
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{clientToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"House Cleaning Service\",\n  \"description\": \"Need professional cleaning for 2BHK apartment. Must be thorough and use eco-friendly products.\",\n  \"amount\": 1500,\n  \"numberOfPeople\": 1,\n  \"address\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"pincode\": \"400001\"\n  },\n  \"genderPreference\": \"female\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/client/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["client", "jobs"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.job._id) {",
                  "        pm.collectionVariables.set('jobId', response.data.job._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Client Jobs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{clientToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/client/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["client", "jobs"]
            }
          }
        },
        {
          "name": "Get Job Offers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{clientToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/client/jobs/{{jobId}}/offers",
              "host": ["{{baseUrl}}"],
              "path": ["client", "jobs", "{{jobId}}", "offers"]
            }
          }
        }
      ]
    },
    {
      "name": "Freelancer Endpoints",
      "item": [
        {
          "name": "Get Freelancer Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{freelancerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/freelancer/profile",
              "host": ["{{baseUrl}}"],
              "path": ["freelancer", "profile"]
            }
          }
        },
        {
          "name": "Get Available Jobs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{freelancerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/freelancer/jobs/available",
              "host": ["{{baseUrl}}"],
              "path": ["freelancer", "jobs", "available"]
            }
          }
        },
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{freelancerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"offeredAmount\": 1400,\n  \"message\": \"I have experience in cleaning and can start immediately.\",\n  \"offerType\": \"custom_offer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/freelancer/jobs/{{jobId}}/apply",
              "host": ["{{baseUrl}}"],
              "path": ["freelancer", "jobs", "{{jobId}}", "apply"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.offer._id) {",
                  "        pm.collectionVariables.set('offerId', response.data.offer._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{freelancerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/freelancer/wallet",
              "host": ["{{baseUrl}}"],
              "path": ["freelancer", "wallet"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Get Pending Verifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/verifications/pending",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "verifications", "pending"]
            }
          }
        },
        {
          "name": "Get Platform Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"]
            }
          }
        },
        {
          "name": "Get Job Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs/{{jobId}}",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", "{{jobId}}"]
            }
          }
        },
        {
          "name": "Get Job Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs/stats/overview",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", "stats", "overview"]
            }
          }
        }
      ]
    }
  ]
}
